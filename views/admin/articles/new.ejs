<%- include("../../partials/head.ejs") %> <%-
include("../../partials/navbar.ejs") %>
<div class="container p-3">
  <div class="card p-3">
    <h2 class="mb-3">Novo artigo</h2>
    <form method="POST" action="/article/save">
      <input
        class="form-control"
        type="text"
        name="title"
        id=""
        placeholder="Título"
      />
      <textarea
        class="form-control mt-3"
        placeholder="Conteúdo do artigo"
        name="body"
        id="article"
        cols="30"
        rows="10"
      ></textarea>
      <label for="category">Categoria</label>
      <select class="form-control" name="category" id="" required>
        <option value="" selected="selected" disabled>
          Selecione a categoria
        </option>
        <% categories.forEach((category) => { %>
        <option value="<%= category.id %> "><%= category.title %></option>
        <% }) %>
      </select>
      <button class="btn btn-primary mt-3">Cadastrar</button>
    </form>
  </div>
</div>
<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    language: "pt_BR",
    selector: "#article",
    plugins:
      "advlist, autolink, link, image, lis, print, preview, hr, searchreplace, wordcount, fullscreen, insertdatetime, media, save, table, paste, emoticons",
  });
</script>
